
<div class="container">

  <h1 class="text-center mt-8 mb-4 text-white"><%= @user.username %>'s profile</h1>

  <%= gravatar_for @user, size: 300 %>

  <% if logged_in? && current_user == @user %>
    <div class="text-center mt-2">
      <%= link_to "Edit Profile", edit_user_path(@user), class:"btn btn-outline-info mb-3 text-center col-2" %>
    </div>
  <% end %>

  <div class="mt-4">
    <h3 class="text-center px-5 text-white">Articles</h3>


    <div class="row justify-content-md-center mt-3 mb-1 ">
      <div class="apple_pagination col-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    </div>

    <%= render 'articles/article' %>

    <div class="row justify-content-md-center mt-3 mb-1 ">
      <div class="apple_pagination col-3">
        <%= will_paginate @articles, :container => false %>
      </div>
    </div>

  </div>

</div>

