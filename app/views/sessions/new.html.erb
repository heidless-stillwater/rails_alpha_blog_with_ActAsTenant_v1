<h2 class="text-center mt-4 mb-4 text-white">Login</h2>

<div class="row justify-content-center">
  <div class="col-4">
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-primary rounded", data: {turbo: false}, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 mb-3 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :username, class:"form-control mb-3 shadow rounded", placeholder: "enter your username..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password, class: "col-2 mb-0 col-form-label text-light" %>
        <div class="col-10">
          <%= f.password_field :password, class:"form-control mb-30shadow rounded", placeholder: "enter your password..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.submit "login", class: "mt-3 btn btn-primary btn-outline-light d-grid gap-2 col-2 mx-auto" %>
      </div>

    <% end %>

    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info row justify-content-center" %>
    </div>

  </div>
</div>
