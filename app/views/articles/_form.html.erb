

<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @article %>
    <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-primary rounded", data: {turbo: false}, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 mb-3 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_field :title, class:"form-control mb-3 shadow rounded", placeholder: "Title of article..." %>
        </div>
      </div>

      <div class="form-group row mb-3">
        <%= f.label :description, class: "col-2 col-form-label text-light" %>
        <div class="col-10">
          <%= f.text_area :description, rows: 10, class:"form-control shadow rounded", placeholder: "Description of article..." %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.submit class: "btn btn-primary btn-outline-light btn-lg d-grid gap-2 col-2 mx-auto mt-4" %>
      </div>

    <% end %>

    <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info row justify-content-center" %>
    </div>

  </div>
</div>
